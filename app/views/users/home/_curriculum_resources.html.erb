<% if @resources_text.length == 0 %>
  <h2><%= I18n.translate('home.additional_ref') %></h2>
<% end %>
<div id='home'>
  <div class="row">
    <div class="col-1"></div>
    <div class='col-10'>
      <% if @editing %>
        <%= form_for @treeTypeRec, url: update_home_page_users_path do |form| %>
           <%= form.cktext_area :preamble, name: 'user[resources_text]',
           value: @resources_text,
           id: 'resources_field', ckeditor: {language: @locale_code, uiColor: '#b0e0e6'}
          %>
          <%= form.submit translate('app.labels.save'), :class => 'btn-primary' %>
        <% end %>
      <% else %>
        <div class="left-justify">
        <%= link_to(fa_icon("edit"), home_users_path(showResources: true, editMe: true), {:class => "fa-lg pull-right"}) if current_user && user_is_admin?(current_user) %>
       	<%= @resources_text %>
        </div>
      <% end %>
    </div>
  </div>
</div>